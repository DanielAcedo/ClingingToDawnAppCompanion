<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingTop="10dp"
    android:background="@drawable/sel_inventoryobject"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/imv_inventoryObjectImage"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/imv_inventoryObjectImage"
        android:layout_toRightOf="@id/imv_inventoryObjectImage"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="-20dp"
        android:textColor="@color/inventoryObjectTitle"
        android:id="@+id/txv_inventoryObjectQuantity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_below="@id/imv_inventoryObjectImage"
        android:layout_centerHorizontal="true"
        android:textColor="@color/inventoryObjectTitle"
        android:id="@+id/txv_inventoryObjectName"/>



</RelativeLayout>