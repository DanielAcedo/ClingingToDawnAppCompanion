<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="110dp"
    android:layout_height="130dp"
    app:cardUseCompatPadding="true"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_object"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/imv_inventoryObjectImage"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/imv_inventoryObjectImage"
            android:layout_toRightOf="@id/imv_inventoryObjectImage"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-20dp"
            android:textColor="@color/inventoryObjectTitle"
            android:id="@+id/txv_inventoryObjectQuantity"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imv_inventoryObjectImage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/inventoryObjectTitle"
                android:id="@+id/txv_inventoryObjectName"/>
        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
